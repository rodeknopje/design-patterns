<Window x:Class="drawing_application.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:drawing_application"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1000">


    <Grid Name="main_grid"  >
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <Grid Name="button_grid" Grid.Column="0" Grid.Row="0" Panel.ZIndex="1"  >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Name="select_rectangle" Grid.Column="0"> Rectangle </Button>
            <Button Name="select_ellipse"   Grid.Column="1"> ellipse   </Button>
            <Button Name="select_clear"     Grid.Column="2"> clear     </Button>
        </Grid>

        <Grid Name="grid" Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="115"/>
            </Grid.ColumnDefinitions>


            <Canvas Name="draw_canvas"  MouseMove="Canvas_Mousemove" MouseLeftButtonUp="Canvas_Mouseup" MouseLeftButtonDown="Canvas_Mousedown"  Background="Black"/>
            <TextBlock x:Name="debug_text" Foreground="White" IsHitTestVisible="False"/>


            <ScrollViewer Grid.Row="1" Grid.Column="1" VerticalScrollBarVisibility="Hidden" Panel.ZIndex="1">
                <StackPanel Name="selection_row"  Background="White"/>
            </ScrollViewer>
        </Grid>




    </Grid>

</Window>
